pragma solidity ^0.8.0; contract Escrow { address public payer; address public payee; address public arbiter; uint public amount; constructor(address _payee, address _arbiter){ payer = msg.sender; payee=_payee; arbiter=_arbiter; } function deposit() external payable { require(msg.sender==payer); amount += msg.value; } function release(){ require(msg.sender==arbiter); payable(payee).transfer(amount); amount=0; } }